<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="CrimsonAgility\ProductsRange\Api\ValidatorInterface"
                type="CrimsonAgility\ProductsRange\Model\ValidatorChain"/>

    <type name="CrimsonAgility\ProductsRange\Model\ValidatorChain">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="empty" xsi:type="object">CrimsonAgility\ProductsRange\Model\Validators\NoEmptyFields</item>
                <item name="grater" xsi:type="object">CrimsonAgility\ProductsRange\Model\Validators\HighPriceGreaterThanLowPrice</item>
                <item name="fivetimes" xsi:type="object">CrimsonAgility\ProductsRange\Model\Validators\NoMoreThanFiveTimesHigher</item>
                <item name="negative" xsi:type="object">CrimsonAgility\ProductsRange\Model\Validators\NoNegativeOrZeroFields</item>
            </argument>
        </arguments>
    </type>

    <preference for="CrimsonAgility\ProductsRange\Api\SearchProductsByRangeInterface"
                type="CrimsonAgility\ProductsRange\Model\SearchProductsByRange" />


</config>
