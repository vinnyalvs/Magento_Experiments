<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Catalog\Api\ProductRepositoryInterface">
        <plugin name="normalize_before_save_product"  type="Vinnyalvs\PluginExample\Plugin\normalizeProductNameBeforeSave"/>
        <plugin name="log_after_save_product"  type="Vinnyalvs\PluginExample\Plugin\logProductNameAfterSave"/>
        <plugin name="log_product_name_around_save" type="Vinnyalvs\PluginExample\Plugin\LogProductNameAroundSave"/>
    </type>


    <type name="Vinnyalvs\Logger\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">MyLogger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="debug" xsi:type="object">Vinnyalvs\Logger\Logger\Handler\DebugHandler</item>
                <item name="critical" xsi:type="object">Vinnyalvs\Logger\Logger\Handler\CriticalHandler</item>
                <item name="info" xsi:type="object">Vinnyalvs\Logger\Logger\Handler\InfoHandler</item>
            </argument>
        </arguments>
    </type>
</config>
